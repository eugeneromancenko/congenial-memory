{
  "Version": "2012-10-17",
  "Statement": [
      {
          "Sid": "AllowGitHubActionsToPushToECR",
          "Effect": "Allow",
          "Action": [
              "ecr:GetAuthorizationToken",
              "ecr:BatchCheckLayerAvailability",
              "ecr:GetDownloadUrlForLayer",
              "ecr:BatchGetImage",
              "ecr:PutImage"
          ],
          "Resource": "*",
          "Condition": {
              "StringEquals": {
                  "aws:sourceArn": "arn:aws:sts::123456789012:assumed-role/github-actions-role/*"
              }
          },
          "Principal": {
              "Service": "ecr.amazonaws.com"
          }
      }
  ]
}
